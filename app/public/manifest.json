{
    "manifest_version": 3,
    "name": "Ask The Dev",
    "version": "1.0.1",
    "description": "Providing instant, context-aware AI assistance simplifying documentation & accelerating problem-solving.",
    "action": {
      "default_popup": "index.html",
      "default_icon": "icons/icon128.png"
    },
    "permissions": ["scripting", "activeTab", "storage"],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
}