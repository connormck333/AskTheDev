{
    "manifest_version": 3,
    "name": "Ask The Dev",
    "version": "1.0.0",
    "description": "AI Chrome Extension - Ask AI questions about the webpage you are on.",
    "action": {
      "default_popup": "index.html",
      "default_icon": "icon.png"
    },
    "permissions": ["scripting", "activeTab", "tabs", "cookies", "http://localhost:5173", "https://api.askthedev.io"],
    "host_permissions": ["<all_urls>"]
}